@model Win8Apps.Models.ContactUsViewModel

@{
    ViewBag.Title = "WinApps - Contact Us";
}


<div class="page secondary">
    <div class="page-header">
        <div class="page-header-content">
            <h1>Contact Us</h1>
            <a href="javascript:history.go(-1);" class="back-button big page-back"></a>
        </div>
    </div>
    <div class="page-region">
        <div class="page-region-content">
            <div class="grid">
                <div class="row">
                    <div class="span6">
                        <p>
                            If you have any feedback, suggestion or request, use the folowing form to get in touch with us.
                        </p>
                        @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
                        {
                            
                            <h3>Name<span class="fg-color-red">*</span> <small>@Html.ValidationMessageFor(m => m.Name, null, new { @class="fg-color-red"})</small></h3>
                            <div class="input-control text">
                                <input type="text" name="name"/>
                                <button class="helper" onclick="return false"></button>
                            </div>
                            <h3>Email<span class="fg-color-red">*</span> <small>@Html.ValidationMessageFor(m => m.Email, null, new { @class="fg-color-red"})</small></h3>
                            <div class="input-control text">
                                <input type="email" name="email" placeholder="Email" />
                                <button class="helper" onclick="return false"></button>
                            </div>
                            <h3>Subject<span class="fg-color-red">*</span> <small>@Html.ValidationMessageFor(m => m.Subject, null, new { @class="fg-color-red"})</small></h3>
                            <div class="input-control text">
                                <input type="text" name="subject" />
                                <button class="helper" onclick="return false"></button>
                            </div>
                            <h3>Message<span class="fg-color-red">*</span> <small>@Html.ValidationMessageFor(m => m.Message, null, new { @class="fg-color-red"})</small></h3>
                            <div class="input-control long-text">
                                <textarea name="message" ></textarea>
                            </div>
                            <input type="submit" value="Submit" class="place-right"/>
                        }
                    </div>
                    <div class="span4">
                        <div class="span4 padding30 text-center place-left bg-color-blueLight" id="sponsorBlock">
                            <h3 class="text-center">Advertisment</h3>
                            <script type="text/javascript"><!--
                                google_ad_client = "ca-pub-7040466421713161";
                                /* InfoPages sidebar */
                                google_ad_slot = "6200441666";
                                google_ad_width = 200;
                                google_ad_height = 200;
                            //-->
                            </script>
                            <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js"></script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>