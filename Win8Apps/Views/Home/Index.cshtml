@model System.Collections.IEnumerable   

<div class="page-region">
    <div class="page-region-content">
        <div class="grid">
            <div class="row">
                <div class="span8">
                    <div class="hero-unit">
                        <div id="carousel1" class="carousel" data-role="carousel" data-param-duration="300">
                            <div class="slides">

                                <div class="slide" id="slide1">
                                    <h2>Find the top applications!</h2>
                                    <p class="bg-color-blue padding20 fg-color-white">
                                        WinApps allows you to find the best applications
                                        it each category in the marketplace
                                    </p>
                                    <p>To start click @Html.ActionLink("Browse", "Search", "Apps")</p>
                                </div>

                                <div class="slide" id="slide2">
                                    <h2>Statistics</h2>
                                    <p class="bg-color-pink padding20 fg-color-white">
                                        WinApps provides various statistics on the Windows Store, <strong>including:</strong>
                                    </p>
                                    <div class="span3 place-left">
                                        <ul class="unstyled sprite-details">
                                            <li><i class="icon-checkmark"></i> Windows Store overview</li>
                                            <li><i class="icon-checkmark"></i> Applications by Platform</li>
                                            <li><i class="icon-checkmark"></i> Applications by Language</li>
                                        </ul>
                                    </div>
                                    <div class="span3 place-left">
                                        <ul class="unstyled sprite-details">
                                            <li><i class="icon-checkmark"></i> Applications by Country</li>
                                            <li><i class="icon-checkmark"></i> Top Developers</li>
                                        </ul>
                                    </div>
                                    
                                </div>

                                <div class="slide" id="slide3">
                                    <h2>Featured apps!</h2>
                                    <p class="bg-color-green padding20 fg-color-white">
                                        Come back soon to find featured applications and games from the marketplace.
                                    </p>
                                </div>
                            </div>

                            <span class="control left"><i class="icon-arrow-left-3"></i></span>
                            <span class="control right"><i class="icon-arrow-right-3"></i></span>

                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="span4 padding30 text-center place-left bg-color-blueLight" id="sponsorBlock">
                        <h3 class="text-center">Advertisment</h3>
                        <script type="text/javascript"><!--
                            google_ad_client = "ca-pub-7040466421713161";
                            /* MainPage */
                            google_ad_slot = "3665777662";
                            google_ad_width = 200;
                            google_ad_height = 200;
                            //-->
                        </script>
                        <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js"></script>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid">
            <div class="row">
                <div class="span8">
                    <div class="span8 bg-color-blue">
                        <img src="~/Content/images/Top.png" class="place-right" style="margin: 10px;"/>
                        <h2 class="fg-color-white">&nbsp;Featured apps</h2>
                    </div>
                    <div class="span8">
                         @{
                            Html.RenderAction("Featured", "Apps", new { count = 8 });
                        }
                    </div>
                </div>

                <div class="span4">
                    <div class="span4 bg-color-yellow">
                        <img src="~/Content/images/Cube.png" class="place-right" style="margin: 10px;"/>
                        <h2 class="fg-color-white">&nbsp;Categories</h2>
                    </div>
                    <div class="span4 button-set" data-role="button-set">
                        @{
                            Html.RenderAction("Categories", "Apps");
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

