@model List<Win8Apps.Model.App>


<div class="grid">
    <div class="row">
        @foreach (var app in Model)
        {
            var color = app.Foreground == "light" ? "fg-color-white" : "fg-color-black";
            <div class="tile double @color" style="background-color: @app.Background" data-role="tile-slider" data-param-duration="1000" data-param-direction="down" data-param-mouse="true">
                <div class="tile-content @color">
                    <img src="http://wscont2.apps.microsoft.com/winstore//1x/@app.Icon" class="place-left"/>
                    <h3 style="margin-bottom: 5px;" class="@color">@app.Title</h3>
                    <h5 class="@color">Rating: @app.ScoreRating</h5>
                    <h5 class="@color">@app.Price.Amount$</h5>
                    <div class="brand">
                        <div class="name @color">@app.Developer</div>
                    </div>
                </div>
                <div class="tile-content @color" data-param-direction="up">
                    <h3 style="margin-bottom: 5px;" class="@color">@app.Title</h3>
                    <p class="@color">
                        @app.Description
                    </p>
                </div>
            </div>
        }
    </div>
</div>
